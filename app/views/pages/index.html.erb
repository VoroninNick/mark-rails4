
<script src="/javascripts/slidedeck.js" type="text/javascript"></script>
<style>
  .skin-slidedeck dl.slidedeck > dd img {
    width: 730px !important;
  }
</style>
<div id="slidedeck_frame" class="skin-slidedeck">
      <dl class="slidedeck">
        <% Banner.published.each do |b| %>
        <dt class="iePNG"><%= b.name.force_encoding("utf-8") %></dt>
        <dd class="iePNG"><a href="<%= b.link %>"><%= image_tag(b.avatar(:thumb), :alt => b.name.force_encoding("utf-8"), :title => b.name.force_encoding("utf-8")) %></a></dd>
        <% end %>
      </dl>
</div>
    <script type="text/javascript">
      $('.slidedeck').slidedeck({
                autoPlay: true,
                cycle: true,
                autoPlayInterval: 6000
            });
    </script>

<div id="akcii_partial" class="span-12">
  <% @shares.each do |s| %>
    <div class="span-4 <%= cycle("", "", "last") %>">
      <%= link_to image_tag(s.avatar.url(:thumb).force_encoding("utf-8"), :alt => s.name.force_encoding("utf-8")), s, :title => s.name.force_encoding("utf-8"), :class => "with_img" %>
      <div class="padd">
        <%= link_to content_tag("h3", s.name.force_encoding("utf-8"), :class => 'brand-color'), s %>
        <i><%= truncate(s.brief.force_encoding("utf-8"), :length => 200) %></i>
      </div>
    </div>
  <% end %>
</div>

<div id="voting" class="span-12">
  <div class="span-4">
    <div class="padd">
      <h3>Що для вас важливіше?</h3>
      <% form_tag "" do %>
        <div><%= radio_button("user", "vote", t('views.pages.index.best_price'), :checked => "checked") %><%= label_tag "user_vote", t('views.pages.index.best_price'), :class => "vote selected" %></div>
        <div><%= radio_button("user", "vote", t('views.pages.index.good_quality')) %><%= label_tag "user_vote", t('views.pages.index.good_quality'), :class => "vote" %></div>
        <div><%= radio_button("user", "vote", t('views.pages.index.price_and_quality_ratio')) %><%= label_tag "user_vote", t('views.pages.index.price_and_quality_ratio'), :class => "vote" %></div>
        <%= submit_tag t('views.pages.index.vote'), :class => "submit" %>
      <% end %>
    </div>
  </div>
  <div class="span-7">
    <div class="padd">
      <h2><%= t('views.pages.index.first_center') %></h2>
      <p><%= t('views.pages.index.first_center_content') %></p>
    </div>
  </div>
</div>

<h1 class="title"><%= t('views.pages.index.news') %></h1>
<div class="articles span-12">
  <% @articles.each do |a| %>
    <div class="span-4 <%= cycle("", "", "last") %>">
      <div class="span-1"><div class="padd"><em><%= a.created_at.day %></em><br /><%= a.created_at.month %></div></div>
      <div class="span-3 last">
        <%= link_to content_tag("h3", a.name.force_encoding("utf-8")), a, :title => a.name.force_encoding("utf-8") %>
        <p><%= truncate(a.brief.force_encoding("utf-8"), :length => 200) %></p>
        <div class="clear"></div>
        <%= link_to t('views.pages.index.details'), a, :title => t('views.pages.index.details'), :class => "details" %>
      </div>
    </div>
  <% end %>
</div>

<h1 class="title"><%= t('views.pages.index.our_partners') %></h1>
<div id="partners" class="span-12">
  <%= image_tag "/images/partner_bg.jpg", :alt => t('views.pages.index.our_partners') %>
      <% @partners.each do |p| %>
    <div class="span-2 <%= cycle("", "", "", "", "", "last") %>"><%=link_to(image_tag(p.avatar(:thumb), :alt=>p.name.force_encoding("utf-8")), p.url.force_encoding("utf-8"), :title=>p.name.force_encoding("utf-8"), :style=>"width: 144px;")%></div>
  <% end %>
</div>
